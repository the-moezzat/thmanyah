{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "strict": true,
    "verbatimModuleSyntax": true,
    "skipLibCheck": true,
    "types": ["node"],
    "jsx": "react-jsx",
    "jsxImportSource": "hono/jsx",
    "outDir": "./dist"
  },
  "baseUrl": ".",
  "paths": {
    "@/*": ["./src/*"],
    "@repo/*": ["../../packages/*"]
  },
  "exclude": ["node_modules"]
}
